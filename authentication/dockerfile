FROM openjdk:12-alpine
COPY ./build/libs/authentication-0.0.1.jar /usr/app/
WORKDIR /usr/app

ENV AUTHENTICATION_SERVICE_ADDRESS host.docker.internal
ENV AUTHENTICATION_SERVICE_PORT 8091

ENV DISCOVERY_SERVICE_ADDRESS host.docker.internal
ENV DISCOVERY_SERVICE_PORT 8090

ENV JWT_PRIVATE_KEY 
ENV JWT_PUBLIC_KEY 

ENV DATABASE_USERNAME root
ENV DATABASE_PASSWORD password
ENV DATABASE_URL jdbc:mysql://host.docker.internal:3306/flixage

EXPOSE ${AUTHENTICATION_SERVICE_PORT}
ENTRYPOINT ["java", "-jar", "authentication-0.0.1.jar"]