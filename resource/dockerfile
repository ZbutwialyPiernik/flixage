FROM openjdk:12-alpine
COPY ./build/libs/resource-0.0.1.jar /usr/app/
WORKDIR /usr/app

ENV RESOURCE_SERVICE_PORT 8092

ENV GATEWAY_SERVICE_URL host.docker.internal:8080/api

ENV DISCOVERY_SERVICE_URL http://host.docker.internal:8090/eureka/

ENV DATABASE_USERNAME root
ENV DATABASE_PASSWORD password
ENV DATABASE_URL jdbc:mysql://host.docker.internal:3306/flixage

ENV JWT_PUBLIC_KEY 

ENTRYPOINT ["java", "-jar", "resource-0.0.1.jar"]